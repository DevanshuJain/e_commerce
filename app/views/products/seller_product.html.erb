<p id="notice"><%= notice %></p>

<p class="navbar-text pull-right">
    <% if seller_signed_in? %>
     Logged in as <strong><%= current_seller.email %></strong>.
      <%= link_to 'seller_Edit profile', edit_seller_registration_path, :class => 'navbar-link' %> |
      <%= link_to "seller_Logout", destroy_seller_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to "seller_Sign up", new_seller_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "seller_Login", new_seller_session_path, :class => 'navbar-link'  %>
    <% end %>
  </p>  

  <% if seller_signed_in? %>
    </br><p type="button" class="btn btn-info"><%= link_to 'New Product', new_product_path %></p>
  <% end %>
  <table class="table">
    <thead>
      <tr>
       <th>title</th>
       <th>Price</th>
       <th>description</th>
       <th colspan="2"></th>
     </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td><%= link_to 'Show', product_path(product) %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>  
      </tr>
    <% end %>
  </tbody>
  </table>


